# some export
source ~/.bash_profile


# pyenv
{{- if eq .chezmoi.hostname "zxy-MBP" }}
export PYENV_ROOT="/Users/iceout/code/github/pyenv"
{{- end }}
{{- if eq .chezmoi.hostname "doubandev2" }}
export PYENV_ROOT="$HOME/.pyenv"
{{- end }}

{{- if eq .chezmoi.hostname "zxy-MBP" "doubandev2"}}
