# 使提示更清晰
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=5'

# history
alias 'hist=fc -lt "%F %T"'

{{- if eq .chezmoi.hostname "zxy-MBP" "Braavos" }}
alias fly='env http_proxy=http://127.0.0.1:7890 https_proxy=http://127.0.0.1:7890'
